@model BrsFile

@{
    ViewBag.Title = "Съобщения от BCPEA с неупешна валидация/верификация";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-left row">

            <div class="card col-2" style="width: 20rem; ">
            <div class="card-body">
                <p class="card-title mt-1">@Model.Id</p>
                <p class="card-title mt-1">Klas: @Model.Klas</p>
                <p class="card-title mt-1">Date: @Model.Date</p>
                <p class="card-title mt-1">Dcng: @Model.Dcng</p>
                <p class="card-title mt-1">Name: @Model.Name</p>
                <p class="card-title mt-1">Text: @Model.Text</p>
            <p class="card-title mt-1">IsFileReady: @Model.IsFileReady</p>
            <p class="card-title mt-1">@Model.IsFindDeptor</p>
            <p class="card-title mt-1">@Model.EmployeeId</p>


            </div>
        </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

