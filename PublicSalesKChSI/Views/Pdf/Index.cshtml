@model TempPdfViewModel

@{
    ViewBag.PleasePdf = "МОЛЯ, ИЗЧАКАЙТЕ!";
    ViewBag.DownloadingPdf = "СВАЛЯТ СЕ PDF-файловете ...";
}
<div class="container" bg-secondary text-center align-items-center p-5">
    <div class="mt-5 mb-5">
        <h1 class="text-center mt-5 mb-5">@ViewBag.PleasePdf</h1>
        <h2 class="mt-5 text-center"><em></em>@ViewBag.DownloadingPdf</h2>
    </div>
</div>

@*@{
    ViewBag.Title = "СВАЛЕНИ PDF-файлове";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <h3>@Model.PdfFileCount</h3>
    <h3>@Model.UnicPdfFileCount</h3>

    <div class="row">
        @foreach (var pdf in Model.TempPdfModels)
        {

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@pdf.OriginalName</h5>
                        <p class="card-text">Size: @pdf.SizeOfFile</p>
                        <p class="card-text">TempHtmlId: @pdf.TempHtmlId</p>
                        <a href="@pdf.Url" class="btn btn-primary">Download</a>
                    </div>
                </div>
            </div>
        }
        }
    </div>
</div>

