@model AllFilesQueryModel

@{
    ViewBag.Title = "Всички съобщения";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-2 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="Court"></label>
                <select asp-for="Court" class="form-control">
                    <option value="">All</option>
                    @foreach (var Court in Model.Courts)
                    {
                        <option value="@Court">@Court</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-2">
            <label asp-for="SearchTermName"></label>
            <input asp-for="SearchTermName" class="form-control" placeholder="...">
        </div>

        <div class="form-group col-md-2">
            <label asp-for="SearchTermText"></label>
            <input asp-for="SearchTermText" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-2">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0">Newest</option>
                    <option value="1">Dlajnici</option>
                </select>
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalFilesCount /
        AllFilesQueryModel.FilesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="WorkingOnFiles"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-Court="@Model.Court"
           asp-route-searchTermName="@Model.SearchTermName"
           asp-route-searchTermName="@Model.SearchTermText"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Files.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="WorkingOnFiles"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-Court="@Model.Court"
           asp-route-searchTermText="@Model.SearchTermText"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

@if (!Model.Files.Any())
{
    <h2 class="text-center">No documents found by the given criteria!</h2>
}

<div class="d-flex">
    <table class="table">
        <thead>
            <tr>
                <th>Дата на публ.</th>
                <th>Класификатор за съда</th>
                <th>Заглавие</th>
                <th>Собственик/Длъжник</th>
                <th>Готов ли е</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

    @foreach (var file in Model.Files)
    {
        <partial name="_FilePartial" model="@file" />
    }
    </table>
</div>